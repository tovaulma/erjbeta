<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePasscode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MenuActivity">

        <TextView
            android:id="@+id/textEnterPasscode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Enter Passcode" />

        <EditText
            android:id="@+id/editTextEnterPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="185dp" />

        <TextView
            android:id="@+id/textConfirmPasscode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Confirm Passcode" />

        <EditText
            android:id="@+id/editTextConfirmPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="305dp" />

        <Button
            android:id="@+id/btnCreatePasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Passcode" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Enter Passcode" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Confirm Passcode" />

</LinearLayout>